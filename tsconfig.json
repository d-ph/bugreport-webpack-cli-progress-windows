{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "dist",

        "types": [
          "bluebird"
        ],

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "importHelpers": true,

        "strictNullChecks": true,
        "skipLibCheck": true,

        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ]

}
